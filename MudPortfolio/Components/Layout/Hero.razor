@*Mobile*@
<MudContainer Class="d-flex d-md-none gap-6 6 pa-8" MaxWidth="MaxWidth.Small">
  <MudStack>
     <MudContainer Class="d-flex d-md-none " Gutters="false">
    <MudImage Class="d-flex d-md-none border-solid border-2 mud-border-info rounded-lg" Fluid="true" Width="200"
      Height="150" Src="ghibli.png" Alt="My Headshot" />
  </MudContainer>
    <MudText Class="d-flex d-md-none" Style="font-weight: 600;" Typo="Typo.subtitle1" Color="Color.Info">Hi, my name is
