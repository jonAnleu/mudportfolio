      <MudButton Class="ml-4" Variant="Variant.Filled" Size="Size.Small" Color="Color.Info"
        StartIcon="@Icons.Custom.Brands.GitHub" Href="https://github.com/" Target="_blank"><b>GitHub</b></MudButton>
    </MudContainer>
  </MudStack>
</MudContainer>

